<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <!-- Nội dung chính nằm dưới App Bar -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    style="@style/CustomButton.Red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đề ngẫu nhiên"
                    app:icon="@drawable/ic_random1"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconSize="50dp"
                    app:iconTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    style="@style/CustomButton.Orange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thi theo bộ đề"
                    app:icon="@drawable/ic_exam"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconSize="50dp"
                    app:iconTint="@color/white" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    style="@style/CustomButton.Green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xem câu bị sai"
                    app:icon="@drawable/ic_cau_sai"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconSize="50dp"
                    app:iconTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    style="@style/CustomButton.Gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ôn tập câu hỏi"
                    app:icon="@drawable/ic_practice"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconSize="50dp"
                    app:iconTint="@color/white" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    style="@style/CustomButton.Blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="60 câu điểm liệt"
                    app:icon="@drawable/ic_diem_liet"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconSize="50dp"
                    app:iconTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    style="@style/CustomButton.Purple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Top 50 câu sai"
                    app:icon="@drawable/ic_hint"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconSize="50dp"
                    app:iconTint="@color/white" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
